<h1>List of People</h1>@using MvcApp001.Models@{ List<PersonModel> people = ViewBag.people;}<a  asp-controller="People" asp-action="Create">Create</a><table class="table table-bordered table-hover">    <thead>        <tr>            <th>ID</th>            <th>Name of the Person</th>            <th>Gender</th>            <th>Age</th>            <th>Details</th>        </tr>    </thead>    <tbody>        @foreach (PersonModel p in people)        {            <tr>            <td>@p.Id</td>            <td>@p.PName</td>            <td>@p.Gender</td>            <td>@p.Age</td>            <td>                <a asp-controller="People" asp-action="Details" asp-route-id="@p.Id">Details </a>|                <a asp-controller="People" asp-action="Edit" asp-route-id="@p.Id">Edit </a>|                <a asp-controller="People" asp-action="Delete" asp-route-id="@p.Id">Delete </a>            </td>            </tr>                   }    </tbody></table> 